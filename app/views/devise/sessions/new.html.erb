<div class="text-center">
  <%= form_for(resource, as: resource_name, html: { class: "form-signin" }, url: session_path(resource_name)) do |f| %>
    <img class="mb-4" src="<%= asset_path('logo.png') %>">

    <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control" %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>

    <h4 class="line-througn">OR</h4>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
