<!-- New room modal -->
<a class="btn btn-light" data-toggle="modal" data-target="#newRoom">
  <i class="fa fa-plus" aria-hidden="true"></i>
  New room
</a>

<div class="modal fade" id="newRoom">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New room</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close-new-room-form">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <%= form_with(url: rooms_path, model: Room.new, method: :post, id: 'new-room-form') do |form| %>
        <div class="modal-body">
          <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title, class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= form.label :add_users %>
            <%= form.select :user_ids, [], { }, multiple: true, class: 'form-control' %>
          </div>
        </div>

        <div class="modal-footer">
          <%= form.submit 'Add', name: :and, class: 'btn btn-info' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
<!-- END -->
