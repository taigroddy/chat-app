<% @messages.each do |message| %>
  <% if message.user_id == current_user.id %>
    <%= render template: 'messages/me_template', layout: false, locals: { message: { content: message.content } } %>
  <% else %>
    <%= render template: 'messages/friend_template', layout: false, locals: {  message: { content: message.content, name: message.user_email } } %>
  <% end %>
<% end %>