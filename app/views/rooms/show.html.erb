<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @room.title %>
</p>

<%= render 'modal/add_user_to_room', room: @room, users: User.all %>

<div id="messages">
  <%- @messages.each do |message|%>
    <div class="message">
      <% if message.user_id == current_user.id %>
        <p>Me</p>
        <p class="alert alert-primary"><%= message.content %></p>
      <% else %>
        <p><%= message.user.email %></p>
        <p class="alert alert-primary"><%= message.content %></p>
      <% end %>
    </div>
  <% end %>
</div>

<%= render 'messages/form', message: Message.new %>

<%= link_to 'Back', rooms_path %>
